[Unit]
Description=Deluge Bittorrent Client Daemon 
After=network-online.target
Wants=deluge-web.service
Before=deluge-web.service

[Service]
User=deluge
Group={{ media_group }}
ExecStart=/usr/bin/deluged -d --logfile=/var/lib/deluge/.config/deluge/deluged.log --loglevel=info

Restart=on-failure

[Install]
WantedBy=multi-user.target

